    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/PA1/student-code/bin/PA1",
            "args": [
                "testcases/scene01_basic.txt",
                "output/scene01.bmp"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/PA1/student-code/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}